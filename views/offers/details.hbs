<section id='deatils-page'>
    <div class='wrapper'>
        <div class='product-img'>
            <img src='{{offer.imgUrl}}' />
        </div>
        <div class='product-info'>
            <div class='product-text'>
                <div class='product-text'>
                    <h1>Name: {{offer.name}}</h1>
                    <h2>Type: {{offer.type}}</h2>
                    <h4>Year: {{offer.year}}</h4>
                    <h4>City: {{offer.city}}</h4>
                    <p>
                        Description:
                        {{offer.description}}
                    </p>

                    {{#if offer.others}}

                        <p>People rented this housing: {{offer.others}}</p>
                    {{else}}

                        <p>People rented this housing: There are no tenants yet.</p>
                    {{/if}}
                    <!-- if there are already tenants of the housing, separate their names with a comma and a space ", "  -->

                    <!-- If not display: -->
                </div>
            </div>

            {{#if user}}

                <div class='product-btn'>
                    {{#if offer.isOwner}}
                        <!-- Only for registered user and creator of the housing offer-->
                        <a
                            href='/offers/edit/{{offer._id}}'
                            class='edit'
                        >Edit</a>
                        <a
                            href='/offers/delete/{{offer._id}}'
                            class='remove'
                        >Delete</a>
                    {{else}}

                        {{#if offer.booked}}

                            <p class='alRentHome'>You have already rent this
                                home</p>
                        {{else}}
                            {{#if offer.hasFreePieces}}
                                <!-- logged in user with available pieces-->
                                <a
                                    href='/offers/book/{{offer._id}}'
                                    class='rentHome'
                                >Rent a home, available
                                    {{offer.availablePieces}}
                                    housing</a>
                            {{else}}

                                <!-- logged in user with no available pieces-->
                                <p class='no-housing'>No Housing Available!</p>
                            {{/if}}
                        {{/if}}

                    {{/if}}

                </div>
            {{/if}}
            <!-- if there is no registered user, do not display buttons-->
        </div>
    </div>
</section>