<form class='search' action='/search' method='POST'>
    <input type='search' name='searchTerm' placeholder='Search here...' />
    <button type='submit'>Search</button>
</form>
<section id='find-section'>
    {{#each offers}}
        <div class='card'>
            <h3>{{this.name}}</h3>
            <p>{{this.description}}</p>
            <div class='cta-container'>
                <a
                    href='/offers/details/{{this._id}}'
                    class='det-link'
                >Details</a>
            </div>
            <div class='card_circle'><img src='{{this.imgUrl}}' /></div>
        </div>
    {{else}}
        <div class='no-data-listing'>
            <p class='no-offer'>No match was found for the submitted type...</p>
        </div>
    {{/each}}
</section>